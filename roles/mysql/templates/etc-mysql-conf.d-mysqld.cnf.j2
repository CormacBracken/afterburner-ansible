[mysqld]
character-set-server    = utf8
collation-server        = utf8_unicode_ci

datadir                 = /var/lib/mysql/
socket                  = /var/run/mysqld/mysqld.sock

{% if mysqlConfiguration is defined -%}
{% for key, value in mysqlConfiguration.iteritems() %}
{% if value -%}
{{ key }}={{ value }}
{% else -%}
{{ key }}
{% endif -%}

{% endfor %}
{% endif %}
